<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMF.Views.WelcomePage"             
             xmlns:dict="clr-namespace: PMF.Dictionaries"
             xmlns:mvvm="clr-namespace: PMF"
             BindingContext="{Binding Source={x:Static mvvm:App.ViewModelLocator}, Path=Main}"
             Title="{x:Static dict:AppDictionary.DefaultTitle}">
  
  
  <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
    <StackLayout.Margin>
      <OnPlatform x:TypeArguments="Thickness"
                  iOS="0,50,0,0" />
    </StackLayout.Margin>
    <Image Source="mainback.png" HorizontalOptions="Center" Margin="30,25,30,0">
      <Image.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding ShowMainMenuCommand}"/>
      </Image.GestureRecognizers>
    </Image>
    
    <Label Text="{x:Static dict:AppDictionary.Welcome}" HorizontalOptions="Center" Margin="20,0,20,0" FontSize="26" FontAttributes="Italic"/>
    <Label Text="{x:Static dict:AppDictionary.WelcomeMessage}" HorizontalOptions="Center" HorizontalTextAlignment="Center" Margin="20,0,20,20" FontSize="12"/>
  </StackLayout>

</ContentPage>